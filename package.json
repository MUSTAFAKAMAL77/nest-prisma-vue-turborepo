{
  "name": "nest-prisma-vue-turborepo",
  "version": "1.0.0",
  "private": true,
  "description": "Fullstack starter template with NestJS + Prisma + Vue + Turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,vue}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "generate": "plop",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "plop": "^4.0.4",
    "prettier": "^3.3.3",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.45.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0",
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
